                                    <div class="card-header">
                                        Map
                                    </div>
                                   
                                        <canvas class="chart" width="250" height="200"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <Tabls class="col-md-12 fw-bold fs-3">Profile Member
                                <button class="btn btn-primary" id="adduser">+</button>
                        </div>

                        <div class="col-md-12">
                            <!-- table -->
                            <table class="table table-bordered table-striped">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>No.</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Tel</th>
                                        <th>ID card</th>
                                        <th>license plate</th>
                                        
                                        <th>Role</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for( let index=0; index < resule.length; index++ ) { %>
                                        <tr>
                                            <td>
                                                <%= index+1 %>
                                            </td>
                                            <td>
                                                <%= resule[index].name %>
                                            </td>
                                            <td>
                                                <%= resule[index].email %>
                                            </td>
                                            <td>
                                                <%= resule[index].tel %>
                                            </td>
                                            <td>
                                                464654
                                            </td>
                                            <td>
                                               646465456
                                            </td>
                                            <td>
                                                <% if (resule[index].role==1) { %>
                                                    User
                                                    <% } else if(resule[index].role==2) { %>
                                                        Driver
                                                        <% } else{ %>
                                                            Admin
                                                            <% } %>
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-danger btnDelete"
                                                    blogID="<%= resule[index].Id %>">Delete</button>
                                                <button type="button" class="btn btn-warning btnEdit"
                                                    blogData="<%= JSON.stringify(resule[index]) %>">Edit</button>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>

                        <%- include('./partials/modal.ejs') %>
                    </div>
                </div>
                <div class="col-2"></div>
            </div>
        </div>
        </div>
        </div>
