                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <Tabls class="col-md-12 fw-bold fs-3">Car
                            <button class="btn btn-primary" id="adduser">+</button>
                    </div>

                    <div class="col-md-12">
                        <!-- table -->
                        <table class="table table-bordered table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th>No.</th>
                                    <th>License_plate</th>
                                    <th>Seat</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for( let index=0; index < result.length; index++ ) { %>
                                    <tr>
                                        <td>
                                            <%= index+1 %>
                                        </td>
                                        <td>
                                            <%= result[index].License_plate %>
                                        </td>
                                        <td>
                                            <%= result[index].seat %>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-danger btnDelete"
                                                blogID="<%= result[index].car_id %>">Delete</button>
                                            <button type="button" class="btn btn-warning btnEdit"
                                                blogData="<%= JSON.stringify(result[index]) %>">Edit</button>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                 <!-- Modal Add Edit User -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Add user</h5>
                            <button type="button" class="close closes" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">No.:</label>
                                    <input type="text" class="form-control" id="name">
                                </div>
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">License_plate:</label>
                                    <input type="text" class="form-control" id="editer">
                                </div>
                                <div class="form-group">
                                    <label for="message-text" class="col-form-label">Seat:</label>
                                    <input class="form-control"  placeholder="example@mail.com"
                                        id="email"></input>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="closes btn btn-secondary"
                                data-dismiss="modal">CLOSE</button>
                            <button type="button" class="btn btn-primary" id="btnModalSave">add</button>
                        </div>
                    </div>
                </div>
            </div>


      <!-- Modal  Delete User -->

      <div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog"
      aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">DELETE USER</h5>
                  <button type="button" class="close close2" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                  </button>
              </div>
              <div class="modal-body">
                  <form>
                      <p>Are you sure you want to remove this User</p>
                  </form>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-secondary close2">NO</button>
                  <button type="button" class="btn btn-danger" id="deletekiki">YES</button>
              </div>
          </div>
      </div>
