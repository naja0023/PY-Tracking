<body>
    <%- include('./partials/navbar.ejs') %>
    <%- include('./partials/sidebar.ejs') %>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                   
                    <div class="row">
                        <div class="col-md-4">
                           
